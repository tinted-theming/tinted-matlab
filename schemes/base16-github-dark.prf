Editor.Language.XML.Color.attribute=C0xdb6d28    # orange
Editor.Language.XML.Color.operator=C0x2ea043     # green
Editor.Language.XML.Color.value=C0x2a9d9a        # cyan
Editor.Language.XML.Color.doctype=C0x388bfd      # blue
