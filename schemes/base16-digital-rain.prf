ColorsUseSystem=Bfalse
ColorsUseMLintAutoFixBackground=Btrue
Editor.VariableHighlighting.Automatic=Btrue
Editor.NonlocalVariableHighlighting=Btrue
EditorCodepadHighVisible=Bfalse                          # no cell highlighting
EditorCodeBlockDividers=Btrue                            # mark cells with line
Editorhighlight-caret-row-boolean=Btrue
EditorRightTextLineVisible=Btrue
EditorRightTextLimitLineWidth=I1
ColorsText=C0x00ff00
ColorsBackground=C0x000000
Colors_M_Keywords=C0x9472b4                      # violet
Colors_M_Comments=C0x7c8d7c
Colors_M_Strings=C0x64c83c                       # green
Colors_M_UnterminatedStrings=C0xb37c5e           # dark red
Colors_M_SystemCommands=C0x468c78                # cyan
Colors_M_Errors=C0xc85a46                        # red
Colors_HTML_HTMLLinks=C0x5482af                  # blue
Colors_M_Warnings=C0xa67a50                      # yellow
ColorsMLintAutoFixBackground=C0x4a8d7e
Editor.VariableHighlighting.Color=C0x4a8d7e
Editor.NonlocalVariableHighlighting.TextColor=C0xc86428  # orange
Editorhighlight-lines=C0x7c8d7c
Editorhighlight-caret-row-boolean-color=C0x4a8d7e
EditorRightTextLimitLineColor=C0x4a8d7e          # matlab cell lines
# MuPAD
Editor.Language.MuPAD.Color.operator=C0xc86428   # orange
Editor.Language.MuPAD.Color.function=C0x5482af   # blue
Editor.Language.MuPAD.Color.constant=C0x64c83c   # green
# TLC
Editor.Language.TLC.Color.Colors_M_Keywords=C0x9472b4    # green
# C/C++
Editor.Language.C.Color.preprocessor=C0xc86428   # orange
Editor.Language.C.Color.char-literal=C0x468c78   # cyan
# Java
Editor.Language.Java.Color.char-literal=C0x468c78# cyan
# VHDL
Editor.Language.VHDL.Color.operator=C0xc86428    # orange
# Verilog
Editor.Language.Verilog.Color.operator=C0xc86428 # orange
# XML
Editor.Language.XML.Color.tag=C0xc85a46          # red
Editor.Language.XML.Color.attribute=C0xc86428    # orange
Editor.Language.XML.Color.operator=C0x64c83c     # green
Editor.Language.XML.Color.value=C0x468c78        # cyan
Editor.Language.XML.Color.doctype=C0x5482af      # blue
Editor.Language.XML.Color.ref=C0x9472b4          # violet
Editor.Language.XML.Color.pi-content=C0x9472b4   # violet
Editor.Language.XML.Color.cdata-section=C0xb37c5e# dark red
