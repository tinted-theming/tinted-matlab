Editor.Language.Java.Color.char-literal=C0x95e6cb# cyan
# VHDL
Editor.Language.VHDL.Color.operator=C0xff8f40    # orange
# Verilog
Editor.Language.Verilog.Color.operator=C0xff8f40 # orange
