ColorsUseSystem=Bfalse
ColorsUseMLintAutoFixBackground=Btrue
Editor.VariableHighlighting.Automatic=Btrue
Editor.NonlocalVariableHighlighting=Btrue
EditorCodepadHighVisible=Bfalse                          # no cell highlighting
EditorCodeBlockDividers=Btrue                            # mark cells with line
Editorhighlight-caret-row-boolean=Btrue
EditorRightTextLineVisible=Btrue
EditorRightTextLimitLineWidth=I1
ColorsText=C0xbcbdc0
ColorsBackground=C0x252a2f
Colors_M_Keywords=C0xa070d0                      # violet
Colors_M_Comments=C0x7f8285
Colors_M_Strings=C0x20c290                       # green
Colors_M_UnterminatedStrings=C0x50509f           # dark red
Colors_M_SystemCommands=C0x02efef                # cyan
Colors_M_Errors=C0xed5d86                        # red
Colors_HTML_HTMLLinks=C0x4080d0                  # blue
Colors_M_Warnings=C0xeb824d                      # yellow
ColorsMLintAutoFixBackground=C0x616568
Editor.VariableHighlighting.Color=C0x616568
Editor.NonlocalVariableHighlighting.TextColor=C0xffcb3d  # orange
Editorhighlight-lines=C0x7f8285
Editorhighlight-caret-row-boolean-color=C0x616568
EditorRightTextLimitLineColor=C0x616568          # matlab cell lines
# MuPAD
Editor.Language.MuPAD.Color.operator=C0xffcb3d   # orange
Editor.Language.MuPAD.Color.function=C0x4080d0   # blue
