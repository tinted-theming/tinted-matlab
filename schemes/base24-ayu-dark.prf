ColorsUseSystem=Bfalse
ColorsUseMLintAutoFixBackground=Btrue
Editor.VariableHighlighting.Automatic=Btrue
Editor.NonlocalVariableHighlighting=Btrue
EditorCodepadHighVisible=Bfalse                          # no cell highlighting
EditorCodeBlockDividers=Btrue                            # mark cells with line
Editorhighlight-caret-row-boolean=Btrue
EditorRightTextLineVisible=Btrue
EditorRightTextLimitLineWidth=I1
ColorsText=C0xe6e1cf
ColorsBackground=C0x0b0e14
Colors_M_Keywords=C0xd2a6ff                      # violet
Colors_M_Comments=C0x3e4b59
Colors_M_Strings=C0xaad94c                       # green
Colors_M_UnterminatedStrings=C0xe6b450           # dark red
Colors_M_SystemCommands=C0x95e6cb                # cyan
Colors_M_Errors=C0xf07178                        # red
Colors_HTML_HTMLLinks=C0x59c2ff                  # blue
Colors_M_Warnings=C0xffb454                      # yellow
ColorsMLintAutoFixBackground=C0x202229
Editor.VariableHighlighting.Color=C0x202229
Editor.NonlocalVariableHighlighting.TextColor=C0xff8f40  # orange
Editorhighlight-lines=C0x3e4b59
Editorhighlight-caret-row-boolean-color=C0x202229
EditorRightTextLimitLineColor=C0x202229          # matlab cell lines
# MuPAD
Editor.Language.MuPAD.Color.operator=C0xff8f40   # orange
Editor.Language.MuPAD.Color.function=C0x59c2ff   # blue
