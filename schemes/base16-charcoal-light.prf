ColorsUseSystem=Bfalse
ColorsUseMLintAutoFixBackground=Btrue
Editor.VariableHighlighting.Automatic=Btrue
Editor.NonlocalVariableHighlighting=Btrue
EditorCodepadHighVisible=Bfalse                          # no cell highlighting
EditorCodeBlockDividers=Btrue                            # mark cells with line
Editorhighlight-caret-row-boolean=Btrue
EditorRightTextLineVisible=Btrue
EditorRightTextLimitLineWidth=I1
ColorsText=C0x35291d
ColorsBackground=C0xd6b891
Colors_M_Keywords=C0x292016                      # violet
Colors_M_Comments=C0x887254
Colors_M_Strings=C0x120f09                       # green
Colors_M_UnterminatedStrings=C0x66553f           # dark red
Colors_M_SystemCommands=C0x413325                # cyan
Colors_M_Errors=C0x413325                        # red
Colors_HTML_HTMLLinks=C0x120f09                  # blue
Colors_M_Warnings=C0x292016                      # yellow
ColorsMLintAutoFixBackground=C0xa28662
Editor.VariableHighlighting.Color=C0xa28662
Editor.NonlocalVariableHighlighting.TextColor=C0x120f09  # orange
Editorhighlight-lines=C0x887254
Editorhighlight-caret-row-boolean-color=C0xa28662
EditorRightTextLimitLineColor=C0xa28662          # matlab cell lines
# MuPAD
Editor.Language.MuPAD.Color.operator=C0x120f09   # orange
Editor.Language.MuPAD.Color.function=C0x120f09   # blue
Editor.Language.MuPAD.Color.constant=C0x120f09   # green
# TLC
Editor.Language.TLC.Color.Colors_M_Keywords=C0x292016    # green
