ColorsUseSystem=Bfalse
ColorsUseMLintAutoFixBackground=Btrue
Editor.VariableHighlighting.Automatic=Btrue
Editor.NonlocalVariableHighlighting=Btrue
EditorCodepadHighVisible=Bfalse                          # no cell highlighting
EditorCodeBlockDividers=Btrue                            # mark cells with line
Editorhighlight-caret-row-boolean=Btrue
EditorRightTextLineVisible=Btrue
EditorRightTextLimitLineWidth=I1
ColorsText=C0xc9d1d9
ColorsBackground=C0x161b22
Colors_M_Keywords=C0xa371f7                      # violet
Colors_M_Comments=C0x6e7681
Colors_M_Strings=C0x2ea043                       # green
Colors_M_UnterminatedStrings=C0x3d2f00           # dark red
Colors_M_SystemCommands=C0x2a9d9a                # cyan
Colors_M_Errors=C0xf85149                        # red
Colors_HTML_HTMLLinks=C0x388bfd                  # blue
Colors_M_Warnings=C0xbb8009                      # yellow
ColorsMLintAutoFixBackground=C0x484f58
Editor.VariableHighlighting.Color=C0x484f58
Editor.NonlocalVariableHighlighting.TextColor=C0xdb6d28  # orange
Editorhighlight-lines=C0x6e7681
Editorhighlight-caret-row-boolean-color=C0x484f58
EditorRightTextLimitLineColor=C0x484f58          # matlab cell lines
# MuPAD
Editor.Language.MuPAD.Color.operator=C0xdb6d28   # orange
Editor.Language.MuPAD.Color.function=C0x388bfd   # blue
Editor.Language.MuPAD.Color.constant=C0x2ea043   # green
# TLC
Editor.Language.TLC.Color.Colors_M_Keywords=C0xa371f7    # green
# C/C++
Editor.Language.C.Color.preprocessor=C0xdb6d28   # orange
Editor.Language.C.Color.char-literal=C0x2a9d9a   # cyan
