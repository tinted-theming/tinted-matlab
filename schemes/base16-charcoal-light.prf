Editor.Language.XML.Color.operator=C0x120f09     # green
Editor.Language.XML.Color.value=C0x413325        # cyan
Editor.Language.XML.Color.doctype=C0x120f09      # blue
Editor.Language.XML.Color.ref=C0x292016          # violet
