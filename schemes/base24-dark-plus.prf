ColorsUseSystem=Bfalse
ColorsUseMLintAutoFixBackground=Btrue
Editor.VariableHighlighting.Automatic=Btrue
Editor.NonlocalVariableHighlighting=Btrue
EditorCodepadHighVisible=Bfalse                          # no cell highlighting
EditorCodeBlockDividers=Btrue                            # mark cells with line
Editorhighlight-caret-row-boolean=Btrue
EditorRightTextLineVisible=Btrue
EditorRightTextLimitLineWidth=I1
ColorsText=C0xc5c5c5
ColorsBackground=C0x0e0e0e
Colors_M_Keywords=C0xbc3fbc                      # violet
Colors_M_Comments=C0x858585
Colors_M_Strings=C0x0dbc79                       # green
Colors_M_UnterminatedStrings=C0x661818           # dark red
Colors_M_SystemCommands=C0x11a8cd                # cyan
Colors_M_Errors=C0xcd3131                        # red
Colors_HTML_HTMLLinks=C0x2472c8                  # blue
Colors_M_Warnings=C0x3b8eea                      # yellow
ColorsMLintAutoFixBackground=C0x666666
Editor.VariableHighlighting.Color=C0x666666
Editor.NonlocalVariableHighlighting.TextColor=C0xe5e510  # orange
Editorhighlight-lines=C0x858585
Editorhighlight-caret-row-boolean-color=C0x666666
EditorRightTextLimitLineColor=C0x666666          # matlab cell lines
# MuPAD
Editor.Language.MuPAD.Color.operator=C0xe5e510   # orange
Editor.Language.MuPAD.Color.function=C0x2472c8   # blue
Editor.Language.MuPAD.Color.constant=C0x0dbc79   # green
# TLC
Editor.Language.TLC.Color.Colors_M_Keywords=C0xbc3fbc    # green
# C/C++
Editor.Language.C.Color.preprocessor=C0xe5e510   # orange
Editor.Language.C.Color.char-literal=C0x11a8cd   # cyan
# Java
Editor.Language.Java.Color.char-literal=C0x11a8cd# cyan
# VHDL
Editor.Language.VHDL.Color.operator=C0xe5e510    # orange
# Verilog
Editor.Language.Verilog.Color.operator=C0xe5e510 # orange
# XML
Editor.Language.XML.Color.tag=C0xcd3131          # red
Editor.Language.XML.Color.attribute=C0xe5e510    # orange
Editor.Language.XML.Color.operator=C0x0dbc79     # green
Editor.Language.XML.Color.value=C0x11a8cd        # cyan
Editor.Language.XML.Color.doctype=C0x2472c8      # blue
Editor.Language.XML.Color.ref=C0xbc3fbc          # violet
Editor.Language.XML.Color.pi-content=C0xbc3fbc   # violet
Editor.Language.XML.Color.cdata-section=C0x661818# dark red
